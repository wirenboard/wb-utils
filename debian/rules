#!/usr/bin/make -f
%:
	dh $@ --with systemd

override_dh_installsystemd:
	dh_installsystemd --name=wb-prepare --no-start --no-restart-after-upgrade --no-restart-on-upgrade
	dh_installsystemd --name=wb-repart --no-start --no-restart-after-upgrade --no-restart-on-upgrade
	dh_installsystemd --name=wb-init --no-start --no-restart-after-upgrade --no-restart-on-upgrade
	dh_installsystemd --name=wb-watch-update --no-start --no-restart-after-upgrade --no-restart-on-upgrade
	dh_installsystemd --name=wb-gsm-rtc-restore --no-start --no-restart-after-upgrade --no-restart-on-upgrade
	dh_installsystemd --name=wb-gsm-rtc-save --no-start --no-restart-after-upgrade --no-restart-on-upgrade

override_dh_systemd_enable:
	dh_systemd_enable --name=wb-prepare wb-prepare.service
	dh_systemd_enable --name=wb-repart wb-repart.service
	dh_systemd_enable --name=wb-init wb-init.service
	dh_systemd_enable --name=wb-watch-update wb-watch-update.service
	dh_systemd_enable --name=wb-gsm-rtc-restore wb-gsm-rtc-restore.service
	dh_systemd_enable --name=wb-gsm-rtc-save wb-gsm-rtc-save.service

override_dh_systemd_start:
	dh_systemd_start --name=wb-prepare --no-start wb-prepare.service
	dh_systemd_start --name=wb-repart --no-start wb-repart.service
	dh_systemd_start --name=wb-init --no-start wb-init.service
	dh_systemd_start --name=wb-watch-update --no-start wb-watch-update.service
	dh_systemd_start --name=wb-gsm-rtc-restore --no-start wb-gsm-rtc-restore.service
	dh_systemd_start --name=wb-gsm-rtc-save --no-start wb-gsm-rtc-save.service
