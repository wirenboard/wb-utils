#!/bin/bash
. /usr/lib/wb-utils/wb-gsm-common.sh

PORT=/dev/ttyGSM

function sys_get_time() {
    date -u +%y/%m/%d,%H:%M:%S
}

function sys_set_time() {
    DATE=$1
    date -u -s "20${DATE/,/ }"
}


case "$1" in
	"save_time" )
        gsm_init
        restart_if_broken

		gsm_set_time `sys_get_time`
	;;

	"restore_time" )
        gsm_init
        restart_if_broken

        sys_set_time `gsm_get_time`
	;;

	"read" )
        gsm_init
        restart_if_broken

		gsm_get_time
	;;

    "present" )
        gsm_present
        exit $?
        ;;

	* )
		echo "USAGE: $0 [save_time|restore_time|read|present]";
	;;
esac

